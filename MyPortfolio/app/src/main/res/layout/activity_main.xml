<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.myportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/popular_movies"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Popular Movies"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/stock_hawk"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/build_it_bigger"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/make_your_app_material"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Make your app Material"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/go_ubiquitous"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/my_own_app"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:onClick="buttonMessage"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>
